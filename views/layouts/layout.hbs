<!DOCTYPE html>
<html lang = "en">
  <head>
  <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>{{title}}</title>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel = "stylesheet" type = "text/css" href = "/public/css/design.css">
    {{#each js}}
      <script defer type = "text/javascript" src = "/public/js/{{this}}"></script>
    {{/each}}
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <div id = "home-container">
    {{> nav}}
    {{#if (emptyObject messages)}}
    {{> flashmessage}}
    {{/if}}
    {{> footer}}
    {{{body}}}
    </div>
    {{#if logged}}
      <script>
        let element = document.getElementById('logout-button');
        if (element) {
          element.onclick = (even) => {
            fetch('/users/logout',{
              method:"POST"
          })
          .then((data) => {
            location.replace('/');
          })
          }
        }
      </script>
    {{/if}}
  </body>
</html>
